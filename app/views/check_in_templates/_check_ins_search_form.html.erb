<%= search_form_for @q, :class => collapse_search_form, :id => "check_ins_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :user, "User" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :user_gteq, :class => "form-control", :placeholder => "User greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :user_lteq, :class => "form-control", :placeholder => "User less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, "Location" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :location_gteq, :class => "form-control", :placeholder => "Location greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :location_lteq, :class => "form-control", :placeholder => "Location less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :checkin_time, "Checkin time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='checkin_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :checkin_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Checkin time greater than or equal to", :data => {:target => '#checkin_timegteqPicker'} %>
          <div class="input-group-append" data-target='#checkin_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#checkin_timegteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='input-group date' id='checkin_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :checkin_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Checkin time less than or equal to", :data => {:target => '#checkin_timelteqPicker'} %>
          <div class="input-group-append" data-target='#checkin_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#checkin_timelteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>




  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/check_ins" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#check_ins_filters">
  Show filters
</a>
